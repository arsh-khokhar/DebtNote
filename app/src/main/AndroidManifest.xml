<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.robotraccoons.debtnote">

    <application
        android:name=".application.DebtNoteApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.SignUpActivity"/>
        <activity android:name=".presentation.TransactionActivity"/>
        <activity android:name=".presentation.MainActivity"/>
        <activity android:name=".presentation.TransactionInfoActivity"/>
        <activity android:name=".presentation.StartupActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
